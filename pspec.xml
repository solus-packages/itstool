        <Summary>XML to PO and back again</Summary>
        <Description>Itstool extracts messages from XML files and outputs PO template files, then merges translations from MO files to create translated XML files. It determines what to translate and how to chunk it into messages using the W3C Internationalization Tag Set (ITS).</Description>
        <License>GPLv3+</License>
        <Archive sha1sum="dc6b766c2acec32d3c5d016b0a33e9268d274f63" type="tarbz2">http://files.itstool.org/itstool/itstool-1.2.0.tar.bz2</Archive>

        <IsA>app:console</IsA>
        <BuildDependencies>
            <Dependency>python</Dependency>
            <Dependency>docbook-xml</Dependency>
            <Dependency>docbook-xsl</Dependency>
        </BuildDependencies>

    </Source>

    <Package>
        <Name>itstool</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/itstool</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency>python</Dependency>
            <Dependency>docbook-xml</Dependency>
            <Dependency>docbook-xsl</Dependency>
        </RuntimeDependencies>
    </Package>


